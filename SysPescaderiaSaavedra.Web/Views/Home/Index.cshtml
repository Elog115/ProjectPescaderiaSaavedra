@{
    ViewData["Title"] = "Pescadería Saavedra - Inicio";
}

<!-- ======================================= -->
<!-- HERO PRINCIPAL -->
<!-- ======================================= -->
<section class="hero-pescaderia">
    <div class="container py-5">
        <div class="row align-items-center g-5">

            <div class="col-lg-6">
                <span class="badge hero-badge mb-3">
                    Pescado fresco todos los días
                </span>

                <h1 class="hero-title mb-3">
                    Sistema de Inventario<br />
                    <span class="hero-highlight">Pescadería Saavedra</span>
                </h1>

                <p class="hero-subtitle mb-4">
                    Sistema para el control de inventario, ventas y compras
                    de productos del mar, asegurando frescura, orden y eficiencia
                    en cada proceso del negocio.
                </p>

                <div class="d-flex flex-wrap gap-3 mb-4">
                    <a href="@Url.Action("Index", "Ventas")"
                       class="btn btn-primary btn-lg d-flex align-items-center gap-2 shadow">
                        <i class="bi bi-cash-stack"></i>
                        <span>Registrar venta</span>
                    </a>

                    <a href="@Url.Action("Index", "Inventario")"
                       class="btn btn-outline-light btn-lg d-flex align-items-center gap-2">
                        <i class="bi bi-box-seam"></i>
                        <span>Inventario</span>
                    </a>
                </div>

                <div class="d-flex flex-wrap gap-4 small hero-info">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-fish"></i>
                        <span>Productos frescos</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-clipboard-check"></i>
                        <span>Control por peso</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-speedometer2"></i>
                        <span>Gestión rápida</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ======================================= -->
<!-- MÓDULOS DEL SISTEMA -->
<!-- ======================================= -->
<section class="py-5 section-light">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="section-title">Módulos del Sistema</h2>
            <p class="section-subtitle">
                Funciones diseñadas para la administración diaria de la pescadería.
            </p>
        </div>

        <div class="row g-4 justify-content-center">

            <!-- Inventario -->
            <div class="col-lg-4 col-md-6">
                <div class="card module-card h-100">
                    <div class="card-body text-center p-5">
                        <div class="module-icon mb-3">
                            <i class="bi bi-boxes"></i>
                        </div>
                        <h5 class="fw-bold">Inventario</h5>
                        <p class="text-muted">
                            Control de existencias, registro de productos
                            y movimientos por peso.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Ventas -->
            <div class="col-lg-4 col-md-6">
                <div class="card module-card h-100">
                    <div class="card-body text-center p-5">
                        <div class="module-icon mb-3">
                            <i class="bi bi-cash-coin"></i>
                        </div>
                        <h5 class="fw-bold">Ventas</h5>
                        <p class="text-muted">
                            Registro de ventas diarias, cálculo automático
                            y control de ingresos.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Compras -->
            <div class="col-lg-4 col-md-6">
                <div class="card module-card h-100">
                    <div class="card-body text-center p-5">
                        <div class="module-icon mb-3">
                            <i class="bi bi-truck"></i>
                        </div>
                        <h5 class="fw-bold">Compras</h5>
                        <p class="text-muted">
                            Gestión de proveedores y compras
                            de productos del mar.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ======================================= -->
<!-- DESCRIPCIÓN DEL SISTEMA -->
<!-- ======================================= -->
<section class="py-5 bg-white">
    <div class="container py-5">
        <div class="row align-items-center g-5">
            <div class="col-lg-7">
                <h2 class="fw-bold text-ocean mb-3">
                    Control y frescura en cada operación
                </h2>
                <p class="lead text-muted">
                    SysPescaderiaSaavedra permite llevar un control ordenado
                    del inventario, minimizar pérdidas y agilizar el proceso
                    de ventas.
                </p>
                <p class="text-muted">
                    Diseñado para pescaderías que buscan eficiencia,
                    orden y una administración confiable.
                </p>
            </div>

            <div class="col-lg-5">
                <div class="info-card shadow">
                    <i class="bi bi-water fs-1 text-ocean mb-3"></i>
                    <p class="fw-semibold mb-1">
                        Calidad y frescura garantizada.
                    </p>
                    <span class="small text-muted">
                        Pescadería Saavedra — Calidad Koi
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ======================================= -->
<!-- ESTILOS -->
<!-- ======================================= -->
<style>
    .text-ocean {
        color: #0b5e6f;
    }

    /* HERO */
    .hero-pescaderia {
        min-height: 80vh;
        display: flex;
        align-items: center;
        color: #ffffff;
        background-image: linear-gradient( rgba(0, 0, 0, 0.55), rgba(0, 0, 0, 0.65) ), url('/images/hero-pescaderia.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .hero-badge {
        background: rgba(255,255,255,.9);
        color: #0b5e6f;
        font-weight: 600;
    }

    .hero-title {
        font-size: clamp(2.6rem, 3vw, 3.6rem);
        font-weight: 800;
        text-shadow: 0 4px 15px rgba(0,0,0,.45);
    }

    .hero-highlight {
        color: #9de6f2;
    }

    .hero-subtitle {
        max-width: 36rem;
        color: #e4f3f8;
        text-shadow: 0 2px 8px rgba(0,0,0,.35);
    }

    .hero-info {
        color: #e4f3f8;
    }

    /* SECCIONES */
    .section-light {
        background: #f5fbff;
    }

    .section-title {
        font-weight: 700;
        color: #0b5e6f;
    }

    .section-subtitle {
        max-width: 36rem;
        margin: 0 auto;
        color: #607b86;
    }

    /* TARJETAS */
    .module-card {
        border-radius: 1.5rem;
        border: none;
        box-shadow: 0 16px 40px rgba(0,0,0,.06);
        transition: transform .25s ease;
    }

        .module-card:hover {
            transform: translateY(-6px);
        }

    .module-icon {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: linear-gradient(135deg, #0b5e6f, #0f8da1);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.8rem;
        margin: 0 auto;
    }

    .info-card {
        background: white;
        border-radius: 1.4rem;
        padding: 1.8rem;
        border: 1px solid #e3f3f6;
    }
</style>
