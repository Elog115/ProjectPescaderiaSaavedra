@{
    ViewData["Title"] = "Pescadería Saavedra - Calidad desde el Mar";
}

<section class="hero-minimalist">
    <div class="hero-overlay"></div>
    <div class="container position-relative py-5">
        <div class="row min-vh-75 align-items-center">
            <div class="col-lg-8 text-white">
                <span class="location-tag mb-3 d-inline-block text-uppercase">
                    <i class="bi bi-geo-alt-fill"></i> Acajutla, Sonsonate
                </span>
                <h1 class="display-2 fw-light mb-2">Pescadería</h1>
                <h2 class="display-1 fw-bold hero-name mb-4">Saavedra Pleites</h2>
                <p class="lead fs-4 opacity-90 mb-5 max-w-600">
                    Frescura inigualable procesada con los más altos estándares.
                    Del puerto directamente a tu mesa.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="#catalogo" class="btn btn-primary-minimal px-5 py-3">Explorar Productos</a>
                    <a href="https://localhost:7003/Home/Dashboard" class="btn btn-glass px-5 py-3">
                        <i class="bi bi-lock me-2"></i>Gestión Interna
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="catalogo" class="py-5 bg-f9">
    <div class="container py-5">
        <div class="header-minimalist mb-5">
            <h2 class="fw-bold text-dark">Productos Más Vendidos</h2>
            <p class="text-muted">Selección de frescura diaria garantizada.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="product-card-modern">
                    <div class="img-zoom-container">
                        <img src="https://puertofresco.com/cdn/shop/products/filete_de_tilapia.jpg?v=1591908200" alt="Lonja de Pescado" class="img-fluid">
                        <span class="badge-top">Top Ventas</span>
                    </div>
                    <div class="product-content">
                        <h3>Lonja de Pescado</h3>
                        <p>Corte premium sin espinas, ideal para filetes a la plancha.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card-modern">
                    <div class="img-zoom-container">
                        <img src="https://previews.123rf.com/images/baloncici/baloncici1107/baloncici110700281/10259725-bunch-of-fresh-shrimp-tails-at-market.jpg" alt="Cola de Camarón" class="img-fluid">
                        <span class="badge-top">Especialidad</span>
                    </div>
                    <div class="product-content">
                        <h3>Cola de Camarón</h3>
                        <p>Limpios y frescos, perfectos para ceviches y cócteles.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="product-card-modern">
                    <div class="img-zoom-container">
                        <img src="https://www.cocinavital.mx/wp-content/uploads/2016/03/conoce-tipos-pescados-mariscos.jpg" alt="Variedad de Mariscos" class="img-fluid">
                        <span class="badge-top">Fresco</span>
                    </div>
                    <div class="product-content">
                        <h3>Variedad de Mariscos</h3>
                        <p>Mix de temporada: pulpo, calamar y mejillones del día.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white border-top">
    <div class="container py-5">
        <div class="row align-items-stretch g-0 rounded-4 overflow-hidden shadow-sm border">
            <div class="col-lg-5 p-5 bg-white">
                <h4 class="fw-bold mb-4">Información de Contacto</h4>
                <ul class="list-unstyled contact-list">
                    <li class="mb-4 d-flex align-items-start">
                        <i class="bi bi-person text-primary fs-4 me-3"></i>
                        <div>
                            <span class="d-block text-muted small">Representante</span>
                            <strong>Oscar Antonio Saavedra Pleites</strong>
                        </div>
                    </li>
                    <li class="mb-4 d-flex align-items-start">
                        <i class="bi bi-telephone text-primary fs-4 me-3"></i>
                        <div>
                            <span class="d-block text-muted small">Teléfono Directo</span>
                            <strong>+503 6823-4819</strong>
                        </div>
                    </li>
                    <li class="mb-4 d-flex align-items-start">
                    <li class="mb-4 d-flex align-items-start">
                        <i class="bi bi-envelope text-primary fs-4 me-3"></i>
                        <div>
                            <span class="d-block text-muted small">Correo Corporativo</span>
                            <strong>pleitesantonio3@gmail.com</strong>
                        </div>
                    </li>
                    <li class="d-flex align-items-start">
                        <i class="bi bi-geo-alt text-primary fs-4 me-3"></i>
                        <div>
                            <span class="d-block text-muted small">Dirección Fiscal</span>
                            <strong>Av. B, Col. Acaxual 2 Et, Lote 72, Acajutla.</strong>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-7 bg-light position-relative min-h-350">
                <div class="map-container-clean">
                    <div class="map-info">
                        <h5 class="mb-1">Visítanos en Acajutla</h5>
                        <p class="small text-muted mb-3">Calle Profesor José Luis Donis, Sonsonate.</p>
                        <a href="https://www.google.com/maps" target="_blank" class="btn btn-sm btn-dark px-4">Abrir en Google Maps</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --primary-blue: #003a4d;
        --accent-teal: #10bacd;
        --soft-bg: #f9fbfc;
    }

    body {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
    }

    /* Hero Moderno */
    .hero-minimalist {
        background-image: url('https://images.unsplash.com/photo-1551244072-5d12893278ab?q=80&w=2000&auto=format&fit=crop');
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, rgba(0,25,35,0.9) 30%, rgba(0,25,35,0.4) 100%);
    }

    .hero-name {
        letter-spacing: -2px;
        line-height: 1;
    }

    .location-tag {
        color: var(--accent-teal);
        font-weight: 700;
        letter-spacing: 2px;
        font-size: 0.85rem;
    }

    .max-w-600 {
        max-width: 600px;
    }

    /* Botones Minimalistas */
    .btn-primary-minimal {
        background: var(--accent-teal);
        border: none;
        color: #002533;
        font-weight: 600;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-primary-minimal:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(16, 186, 205, 0.3);
            color: white;
        }

    .btn-glass {
        background: rgba(255,255,255,0.1);
        backdrop-filter: blur(10px);
        color: white;
        border: 1px solid rgba(255,255,255,0.2);
        border-radius: 8px;
    }

        .btn-glass:hover {
            background: white;
            color: var(--primary-blue);
        }

    /* Cards de Productos */
    .product-card-modern {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s ease;
        border: 1px solid #eee;
    }

        .product-card-modern:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        }

    .img-zoom-container {
        position: relative;
        height: 250px;
        overflow: hidden;
    }

        .img-zoom-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .badge-top {
        position: absolute;
        top: 15px;
        left: 15px;
        background: white;
        color: var(--primary-blue);
        padding: 5px 15px;
        border-radius: 30px;
        font-weight: 700;
        font-size: 0.75rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .product-content {
        padding: 25px;
    }

        .product-content h3 {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary-blue);
        }

    /* Contacto y Mapa */
    .min-h-350 {
        min-height: 350px;
    }

    .map-container-clean {
        background: #e9ecef url('https://i.blogs.es/6e74fb/google-maps-portada/1200_900.jpeg') center/cover;
        height: 100%;
        display: flex;
        align-items: flex-end;
        padding: 30px;
    }

    .map-info {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 320px;
    }

    .contact-list li strong {
        color: var(--primary-blue);
        font-size: 1.1rem;
    }
</style>