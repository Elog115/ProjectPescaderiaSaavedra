<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pescadería Saavedra</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        /* ====== PALETA PESCADERÍA ====== */

        /* Navbar océano */
        .bg-ocean {
            background: linear-gradient(90deg, #0b5e6f 0%, #0f7c8d 100%);
        }

        /* Links navbar */
        .navbar-dark .navbar-nav .nav-link {
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: #ffffff;
                text-shadow: 0 0 4px rgba(255, 255, 255, 0.4);
            }

        /* Botón Dashboard destacado */
        .btn-dashboard {
            background-color: #1dd3b0;
            color: #003844;
            font-weight: 600;
            border-radius: 1.5rem;
            padding: 6px 16px;
        }

            .btn-dashboard:hover {
                background-color: #17b89c;
                color: #002b36;
            }

        /* Brand */
        .navbar-brand {
            font-weight: bold;
            letter-spacing: 1px;
        }

        footer {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-ocean box-shadow mb-3">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-water"></i> Pescadería Saavedra
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- MENÚ IZQUIERDO -->
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Inicio
                            </a>
                        </li>

                        <!-- DASHBOARD (NUEVO) -->
                        <li class="nav-item">
                            <a class="btn btn-dashboard"
                               asp-controller="Home"
                               asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>

                        </li>

                        <!-- VENTAS -->
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-cart-check-fill"></i> Ventas
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Ventas" asp-action="Index">Historial de Ventas</a></li>
                                <li><a class="dropdown-item" asp-controller="Ventas" asp-action="Create">Nueva Venta</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                            </ul>
                        </li>

                        <!-- COMPRAS -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-box-seam-fill"></i> Compras
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="IngresoMercaderia" asp-action="Index">Ingresos</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Proveedores" asp-action="Index">Proveedores</a></li>
                            </ul>
                        </li>

                        <!-- INVENTARIO -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-tags-fill"></i> Inventario
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Productos" asp-action="Index">Productos</a></li>
                                <li><a class="dropdown-item" asp-controller="Categorias" asp-action="Index">Categorías</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Lotes" asp-action="Index">Lotes</a></li>
                            </ul>
                        </li>

                    </ul>

                    <!-- MENÚ DERECHO -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-gear-fill"></i> Administración
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">Usuarios</a></li>
                                <li><a class="dropdown-item" asp-controller="Roles" asp-action="Index">Roles</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#">Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2026 - Pescadería Saavedra
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
