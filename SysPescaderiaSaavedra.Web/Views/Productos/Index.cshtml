@model IEnumerable<SysPescaderiaSaavedra.Web.Models.Producto>

@{
    ViewData["Title"] = "Gestión de Productos";
}

<style>
    .table-custom thead {
        background-color: #f1f5f7;
    }

    .table-custom th {
        font-weight: 600;
        color: #0b5e6f;
        text-transform: uppercase;
        font-size: 0.75rem;
    }

    .table-custom tbody tr:hover {
        background-color: rgba(29, 211, 176, 0.08);
    }

    .badge-estado {
        font-size: 0.75rem;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 600;
        letter-spacing: .4px;
    }

    .badge-activo {
        background-color: #e6f9f3;
        color: #0f7c8d;
    }

    .badge-inactivo {
        background-color: #fdecea;
        color: #b42318;
    }

    .badge-stock-normal {
        background-color: #eef2ff;
        color: #3730a3;
        font-size: 0.75rem;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 600;
    }

    .badge-stock-bajo {
        background-color: #fff4e5;
        color: #b54708;
        font-size: 0.75rem;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 700;
    }

    .badge-stock-agotado {
        background-color: #fdecea;
        color: #b42318;
        font-size: 0.75rem;
        padding: 6px 12px;
        border-radius: 999px;
        font-weight: 700;
    }
</style>

<div class="card shadow-sm rounded-4">

    <!-- HEADER -->
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h5 class="m-0 fw-bold text-ocean">
            <i class="bi bi-box-seam me-2"></i> Gestión de Productos
        </h5>

        <a asp-action="Create" class="btn btn-success btn-sm">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
        </a>
    </div>

    <div class="card-body">

        <!-- BUSCADOR -->
        <div class="mb-4">
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="bi bi-search"></i>
                </span>
                <input id="txtSearch" class="form-control"
                       placeholder="Buscar producto..." />
                <button class="btn btn-outline-secondary" id="btnClear">
                    Limpiar
                </button>
            </div>
        </div>

        <!-- TABLA -->
        <div class="table-responsive">
            <table class="table table-hover align-middle table-custom">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Descripción</th>
                        <th>Unidad</th>
                        <th class="text-center">Precio Venta</th>
                        <th class="text-center">Stock</th>
                        <th>Categoría</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Fecha Registro</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody id="tablaBody">
                    @foreach (var p in Model)
                    {
                        <tr class="@(p.Estado ? "" : "opacity-75")">

                            <td class="fw-semibold">
                                @p.Nombre
                            </td>

                            <td class="text-muted">
                                @p.Descripcion
                            </td>

                            <td>
                                @p.UnidadMedida
                            </td>

                            <td class="text-center fw-semibold">
                                @p.PrecioVenta.ToString("N2")
                            </td>

                            <!-- STOCK CON ALERTA -->
                            <td class="text-center">
                                @if (p.StockGlobal <= 0)
                                {
                                    <span class="badge-stock-agotado">
                                        Agotado
                                    </span>
                                }
                                else if (p.StockGlobal <= 5)
                                {
                                    <span class="badge-stock-bajo">
                                        Bajo (@p.StockGlobal)
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-stock-normal">
                                        @p.StockGlobal
                                    </span>
                                }
                            </td>

                            <td>
                                @p.Categoria?.Nombre
                            </td>

                            <td class="text-center">
                                @if (p.Estado)
                                {
                                    <span class="badge-estado badge-activo">
                                        Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-estado badge-inactivo">
                                        Inactivo
                                    </span>
                                }
                            </td>

                            <td class="text-center text-muted">
                                @p.FechaRegistro.ToString("dd/MM/yyyy")
                            </td>

                            <td class="text-end text-nowrap">

                                <!-- BOTÓN VER LOTES -->
                                <a asp-action="Lotes" asp-route-id="@p.ProductoId"
                                   class="btn btn-sm btn-outline-dark"
                                   title="Ver Lotes">
                                    <i class="bi bi-boxes"></i>
                                </a>

                                <a asp-action="Edit" asp-route-id="@p.ProductoId"
                                   class="btn btn-sm btn-outline-primary"
                                   title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                @if (p.Estado)
                                {
                                    <a asp-action="ToggleEstado"
                                       asp-route-id="@p.ProductoId"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Desactivar">
                                        <i class="bi bi-toggle-off"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="ToggleEstado"
                                       asp-route-id="@p.ProductoId"
                                       class="btn btn-sm btn-outline-success"
                                       title="Activar">
                                        <i class="bi bi-toggle-on"></i>
                                    </a>
                                }

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- SCRIPT BUSCADOR -->
<script>
    document.getElementById("txtSearch").addEventListener("keyup", function () {
        let filtro = this.value.toLowerCase();
        let filas = document.querySelectorAll("#tablaBody tr");

        filas.forEach(function (fila) {
            let textoFila = fila.innerText.toLowerCase();

            if (textoFila.includes(filtro)) {
                fila.style.display = "";
            } else {
                fila.style.display = "none";
            }
        });
    });

    document.getElementById("btnClear").addEventListener("click", function () {
        document.getElementById("txtSearch").value = "";
        let filas = document.querySelectorAll("#tablaBody tr");
        filas.forEach(fila => fila.style.display = "");
    });
</script>