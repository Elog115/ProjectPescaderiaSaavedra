@model SysPescaderiaSaavedra.Web.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4">

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark rounded-top-4">
            <h4 class="mb-0">
                ✏️ Editar Producto
            </h4>
        </div>

        <div class="card-body">

            <form asp-action="Edit">

                <input type="hidden" asp-for="ProductoId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">

                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoriaId" class="form-label fw-bold"></label>
                        <select asp-for="CategoriaId"
                                class="form-select"
                                asp-items="ViewBag.CategoriaId">
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Descripcion" class="form-label fw-bold"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="UnidadMedida" class="form-label fw-bold"></label>
                        <input asp-for="UnidadMedida" class="form-control" />
                        <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="PrecioVenta" class="form-label fw-bold"></label>
                        <input asp-for="PrecioVenta" class="form-control" />
                        <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="StockGlobal" class="form-label fw-bold"></label>
                        <input asp-for="StockGlobal" class="form-control" readonly />
                        <small class="text-muted">
                            ⚠ El stock se gestiona por lotes
                        </small>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="FechaRegistro" class="form-label fw-bold"></label>
                        <input asp-for="FechaRegistro" class="form-control" readonly />
                    </div>

                </div>

                <div class="form-check form-switch mb-2">
                    <input class="form-check-input" asp-for="PublicadoWeb" />
                    <label class="form-check-label fw-bold">
                        Publicado en Web
                    </label>
                </div>

                <div class="form-check form-switch mb-4">
                    <input class="form-check-input" asp-for="Estado" />
                    <label class="form-check-label fw-bold">
                        Activo
                    </label>
                </div>

                <hr />

                <div class="d-flex justify-content-between">

                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        ⬅ Volver
                    </a>

                    <button type="submit" class="btn btn-warning rounded-pill px-4">
                        💾 Guardar Cambios
                    </button>

                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}