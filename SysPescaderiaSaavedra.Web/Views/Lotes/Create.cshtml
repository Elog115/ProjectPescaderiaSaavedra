@model SysPescaderiaSaavedra.Web.Models.Lote

@{
    ViewData["Title"] = "Nuevo Lote";
}

<div class="card shadow-sm rounded-4">
    <div class="card-header py-3">
        <h5 class="fw-bold m-0">
            <i class="bi bi-plus-circle me-2"></i> Nuevo Lote
        </h5>
    </div>

    <div class="card-body">

        <form asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="IngresoId" class="form-label"></label>
                    <select asp-for="IngresoId" class="form-select" asp-items="ViewBag.IngresoId"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProductoId" class="form-label"></label>
                    <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="CodigoLote" class="form-label"></label>
                    <input asp-for="CodigoLote" class="form-control" />
                    <span asp-validation-for="CodigoLote" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CantidadInicial" class="form-label"></label>
                    <input asp-for="CantidadInicial" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="StockActual" class="form-label"></label>
                    <input asp-for="StockActual" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="CostoUnitario" class="form-label"></label>
                    <input asp-for="CostoUnitario" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaProduccion" class="form-label"></label>
                    <input asp-for="FechaProduccion" type="date" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaVencimiento" class="form-label"></label>
                    <input asp-for="FechaVencimiento" type="date" class="form-control" />
                </div>

            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Volver
                </a>

                <button type="submit" class="btn btn-success">
                    Guardar Lote
                </button>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}