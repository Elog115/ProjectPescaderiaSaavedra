        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoLote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadInicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockActual)
            </td>
